<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white_alpha_half"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/zhihu_list_item_pic_width"
            android:layout_height="@dimen/zhihu_list_item_pic_height"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:textColor="@color/alpha_75_black"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_pic"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:padding="3dp"
            android:textSize="18sp"
            tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题." />

    </RelativeLayout>
</android.support.v7.widget.CardView>